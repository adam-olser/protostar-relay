{
  "manifest_version": 2,
  "name": "Protostar-Relay",
  "description": "Debugging tools for Relay.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "assets/cut-scissor.png",
    "32": "assets/cut-scissor.png",
    "48": "assets/cut-scissor.png",
    "128": "assets/cut-scissor.png"
  },
  "browser_action": {
    "default_popup": "popups/disabled.html"
  },
  "web_accessible_resources": ["hook.js"],
  "devtools_page": "devtool.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
